<link rel="stylesheet" href="/css/navbar.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Lora:wght@400;600&family=Quicksand:wght@400;600&family=Nunito:wght@400;600&family=Playfair+Display:wght@400;600&display=swap"
        rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="style.css">


<header>
    <nav id="navbar" class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="views/siddhi_smile.jpg" alt="Logo" class="d-inline-block align-top"
                    style="height: 70px; width: auto;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/">
                            <i class="fa-solid fa-house"></i>
                            <span>Home</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/#about">
                            <i class="fa-solid fa-book-open"></i>
                            <span>About Us</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/#team">
                            <i class="fa-solid fa-user-doctor"></i>
                            <span>Team</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/#products">
                            <i class="fa-solid fa-bell-concierge"></i>
                            <span>Products</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#contact">
                            <i class="fa-solid fa-address-book"></i>
                            <span>Contact Us</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="dropdown">
                <% if (user) { %>
                <% if (user.profile) { %> 
                <img src="/gmailprofile/<%= path.basename(user.profile) %>" alt="User Logo" class="rounded-circle" style="width: 40px; height: 40px;">
                <% }  %>
                <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="/mycart">My Cart</a></li>
                    <li><a class="dropdown-item" href="/checkout">Checkout</a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
                </ul>
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                    id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    
                        
                            <p><%= user.name %></p>
                          <% } else { %>
                            <a class="nav-link text-white" href="login">Login</a>
                          <% } %>
                </a>
            </div>
        </div>
    </nav>
</header>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/navbar.js"></script>
